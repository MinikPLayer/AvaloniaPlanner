<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:icons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
			 xmlns:ctrls="using:AvaloniaPlanner.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AvaloniaPlanner.Controls.PaneEntry">

	<Design.DataContext>
		<ctrls:PaneEntryModel />
	</Design.DataContext>

	<UserControl.Styles>
		<Style Selector="Button">
			<Setter Property="Padding" Value="5"/>
			<Setter Property="HorizontalContentAlignment" Value="Left"/>
		</Style>
		<Style Selector="Button:not(:pressed):not(:pointerover)">
			<Setter Property="Background" Value="Transparent"/>
		</Style>
	</UserControl.Styles>
	
	<Button Click="EntryClicked">
		<StackPanel Orientation="Horizontal" Spacing="5">
			<icons:MaterialIcon Kind="{Binding Icon}" Width="{Binding IconSize, Mode=OneWay}" Height="{Binding IconSize, Mode=OneWay}"/>
			<TextBlock Text="{Binding EntryName}" FontSize="20" IsVisible="{Binding IsExpanded}"/>
		</StackPanel>
	</Button>
	
</UserControl>
